networks:
  gerenciador-jogos-network:
    driver: bridge
services:
  db:
    build:
      context: C:\Users\vilma\Desktop\DesafioInvillia\Desafio.Net_GerenciadorJogos\GerenciadorJogos
      dockerfile: db/Dockerfile
    command: mysqld --default-authentication-plugin=mysql_native_password
    environment:
      MYSQL_DATABASE: GerenciadorJogos
      MYSQL_PASSWORD: docker
      MYSQL_ROOT_PASSWORD: docker
      MYSQL_USER: docker
      TZ: America/Sao_Paulo
    image: gerenciador-jogos-webapi-db
    networks:
      gerenciador-jogos-network: null
    ports:
    - published: 3308
      target: 3306
    restart: always
  gerenciador-jogos-webapi:
    build:
      context: C:\Users\vilma\Desktop\DesafioInvillia\Desafio.Net_GerenciadorJogos\GerenciadorJogos
      dockerfile: GerenciadorJogos.WebApi/Dockerfile
    depends_on:
      db:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Production
      TZ: America/Sao_Paulo
    image: gerenciador-jogos-webapi
    networks:
      gerenciador-jogos-network: null
    ports:
    - published: 51136
      target: 80
version: '3.4'